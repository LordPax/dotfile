URxvt.perl-ext-common: default,matcher,resize-font,-tabbed
URxvt*scrollBar: false
URxvt*letterSpace: 0
URxvt*internalBorder: 1
URxvt*font: xft:DejaVu Sans Mono:Book:size=9
! URxvt*font: xft:DejaVu Sans Mono:Book:size=9,xft:Symbols Nerd Font Mono:style=Regular:size=12
URxvt*boldFont: xft:DejaVu Sans Mono:Bold:size=9
URxvt*italicFont: xft:DejaVu Sans Mono:style=Oblique:size=9
URxvt*boldItalicFont: xft:DejaVu Sans Mono:style=Bold Oblique:size=9
URxvt*cursorBlink: true
URxvt.iso14755: false
URxvt*utf8: true
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
! intall urxvt-resize-font-git from AUR
URxvt.resize-font.step: 1
URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-plus: resize-font:bigger
URxvt.keysym.C-equal: resize-font:reset
URxvt.keysym.C-question: resize-font:show
